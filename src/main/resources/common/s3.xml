<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="s3Util" class="koreatech.in.util.S3Util">
        <constructor-arg name="accessKey" value="${s3.key}"/>
        <constructor-arg name="secretKey" value="${s3.secret}"/>
    </bean>

    <bean id="uploadS3Util" class="koreatech.in.util.UploadFileUtils">
        <property name="s3Util" ref="s3Util"/>
        <property name="bucketName" value="${s3.bucket}"/>
        <property name="domain" value="${s3.custom_domain}"/>
    </bean>

    <bean id="sesMailSender" class="koreatech.in.util.SesMailSender"/>
</beans>